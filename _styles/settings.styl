@font-face
	font-family PT Sans
	src url("../_fonts/PT-Sans-regular.woff2") format("woff2")

@font-face
	font-family: "Montserrat-Regular";
	src: url("../_fonts/Montserrat-Regular.woff2") format("woff2")

@font-face
	font-family: "Montserrat-Bold";
	src: url("../_fonts/Montserrat-Bold.woff2") format("woff2")

@font-face
	font-family: "Poppins";
	src: url("../_fonts/Poppins-SemiBold.woff") format("woff")

@font-face
	font-family: "Montserrat-Light";
	src: url("../_fonts/Montserrat-Light.woff") format("woff")

@font-face
	font-family: "PD BlackItalic";
	src: url("../_fonts/PlayfairDisplay-BlackItalic.woff2") format("woff2")

@font-face
	font-family: "PD Bold";
	src: url("../_fonts/PlayfairDisplay-Bold.woff2") format("woff2")

@font-face
	font-family: "PD Regular";
	src: url("../_fonts/PlayfairDisplay-Regular.woff2") format("woff2")
//====================
// mixins
// ===================
font($size,$family,$weight,$color)
	font-size $size
	font-family $family
	font-weight $weight
	color: $color
//====================
// variables
// ===================
$blue = #3853d8



//====================
// global
// ===================
[v-cloak]
	display none

body
	padding 0
	margin 0
	background url('../_img/cork-wallet.png')
*
	box-sizing: border-box

a
	text-decoration: none

h3
p
h2
h1
	margin 0

ul
ol
	list-style none
